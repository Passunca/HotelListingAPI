{
  "ConnectionStrings": {
    "HotelListingDbConnectionString": "Server=localhost;Database=HotelListingApiDb;TrustServerCertificate=True;Trusted_Connection=True;MultipleActiveResultSets=True"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": ".logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "https://localhost:5341" }
      }
    ]
  },
  "AllowedHosts": "*"
}
